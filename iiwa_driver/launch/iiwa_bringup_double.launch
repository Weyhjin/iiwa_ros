<launch>
  <!-- Select the robot -->
  <arg name="robot_name_1" default="iiwa_left"/>
  <arg name="model_1" default="7" />

  <arg name="robot_name_2" default="iiwa_right"/>
  <arg name="model_2" default="14" />

  <!-- Select the controller -->
  <arg name="controller" default="TorqueController"/>
  
  <include file="$(find iiwa_driver)/launch/iiwa_bringup.launch">
        <arg name="robot_name" value="$(arg robot_name_1)"/>
        <arg name="model" value="$(arg model_1)"/>
        <arg name="controller" value="$(arg controller)" />
  </include>

  <include file="$(find iiwa_driver)/launch/iiwa_bringup.launch">
        <arg name="robot_name" value="$(arg robot_name_2)"/>
        <arg name="model" value="$(arg model_2)"/>
        <arg name="controller" value="$(arg controller)" />
  </include>

</launch>